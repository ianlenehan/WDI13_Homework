<h1><%= @mountain.name %></h1>

<div class="mountain_show_item">
  <img class="mountain_show_image" src="<%= @mountain.image %>" alt="">
  <div class="mountain_show_info">
    <p><strong>Height:</strong> <%= @mountain.height %></p>
    <p><strong>Country:</strong> <%= @mountain.country %></p>
    <p><strong>Year First Climbed:</strong> <%= @mountain.year_climbed %></p>
    <p class="edit_links"><a href="/mountains/<%= @mountain.id %>/edit">Edit</a><a href="/mountains/<%= @mountain.id %>/delete">Delete</a></p>
  </div>
</div>
