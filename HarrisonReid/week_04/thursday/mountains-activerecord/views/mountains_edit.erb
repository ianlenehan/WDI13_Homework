<h1>Edit Mountain</h2>
<form action="/mountains/<%= @mountain.id %>" method="post">
  <label>Name: </label>
  <input name="name" value="<%= @mountain.name %>">
  <label>Height: </label>
  <input type="number" name="height" value="<%= @mountain.height %>">
  <label>Country: </label>
  <input name="country" value="<%= @mountain.country %>">
  <label>First Climbed: </label>
  <input type="number" name="year_climbed" value="<%= @mountain.year_climbed %>">
  <label>Image URL: </label>
  <input type="url" name="image_url" value="<%= @mountain.image %>">

  <input type="submit" value="Update Mountain">
</form>
