<h1>Edit Mountain</h1>

<form action="<%= mountain_update_path(@mountain.id) %>" method="post">
  <p><label>Name: </label><input type="text" name="name" value='<%= @mountain.name %>'></p>
  <p><label>Image: </label><input type="url" name="image" value='<%= @mountain.image %>'></p>
  <p><label>Height(m): </label><input type="integer" name="height" value='<%= @mountain.height %>'></p>
  <p><label>Elevation(m): </label><input type="integer" name="elevation" value='<%= @mountain.elevation %>'></p>
  <p><label>Country: </label><input type="text" name="country" value='<%= @mountain.country %>'></p>
  <p><label>Country Other: </label><input type="text" name="country_other" value='<%= @mountain.country_other %>'></p>
  <input type="submit">
</form>
