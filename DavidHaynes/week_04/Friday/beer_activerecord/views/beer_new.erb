<form action="/beers" method="post">
    <h2>Add a new Beer</h2>
    <p>Beer Name: </p>
    <input name="name">

    <p>Country of Origin: </p>
    <input name='country'>

    <p>Class of Beer: </p>
    <input name="category">

    <p>Image URL: </p>
    <input type="url" name='image'>
