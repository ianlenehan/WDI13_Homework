<h1>Details of <%= @author.name %></h1>

<%= image_tag(@author.image, :class => 'feature') %>
<ul>
  <li>Name: <%= @author.name %></li>
  <li>Date of Birth: <%= @author.dob.strftime '%e %b %Y' if @author.dob.present? %></li>
  <li>Birthplace: <%= @author.birthplace %></li>
  <li>Current Residence: <%= @author.residence %></li>
</ul>

<% if @author.books.present? %>
  <h2><%= @author.name %>'s books in the library:</h2>
<% end %>

<% @author.books.each do |book| %>
  <%= link_to(image_tag(book.image, :class => 'thumb'), book) %>
<% end %>

<p>
  <%= link_to 'Edit Author Details', edit_author_path(@author) %>
  <%= link_to 'Delete Author', @author, :method => 'delete' %>
</p>
