<h1><%= @book.title %></h1>

<div class="left">
  <%= image_tag(@book.image, :class => 'feature') %>
</div>

<div class="right">
  <p><%= @book.title %></p>
  <% if @book.author != nil %>
    <p>Author: <%= link_to(@book.author.name, @book.author ) %></p>
  <% end %>
  <% if @book.published != nil %>
    <p>First Published: <%= @book.published %></p>
  <% end %>
  <% if @book.edition != nil %>
    <p>Edition In Library: <%= @book.edition %></p>
  <% end %>
  <% if @book.editionyear != nil %>
    <p>Year of <%= @book.edition %> Edition Publication: <%= @book.editionyear %></p>
  <% end %>
  <% if @book.isbn != nil %>
    <p>ISBN: <%= @book.isbn %></p>
  <% end %>
</div>

<p>
  <%= link_to 'Edit Book Details', edit_book_path(@book.id) %>
  <%= link_to 'Delete Book From Library', @book, :method => :delete %>
</p>
