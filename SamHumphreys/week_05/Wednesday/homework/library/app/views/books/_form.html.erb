<%= form_for @book do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>
  <fieldset>
    <%= f.label :author_id %>
    <%= f.select :author_id, Author.pluck(:name, :id), :include_blank => true %>
  </fieldset>
  <fieldset>
    <%= f.label :published, 'Year First Published' %>
    <%= f.text_field :published %>
  </fieldset>
  <fieldset>
    <%= f.label :edition, 'Edition In Library' %>
    <%= f.text_field :edition %>
  </fieldset>
  <fieldset>
    <%= f.label :editionyear, 'Publication Year Of Edition In Library' %>
    <%= f.text_field :editionyear %>
  </fieldset>
  <fieldset>
    <%= f.label :isbn %>
    <%= f.text_field :isbn %>
  </fieldset>
  <fieldset>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </fieldset>
  <%= f.submit %>
<% end %>
