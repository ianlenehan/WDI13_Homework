<h1><%= @book.title %></h1>
<% if @book.cover.present %>
  <%= image_tag(@book.cover) %>
<% end %>

<% if @book.author.present %>
  <p><%= link_to(@book.author.name, @book.author) %></p>
<% end %>

<p><%= @book.pub_date %></p>

<p>
  <%= link_to('Edit Book', edit_book_path) %>
  <%= link_to('Delete Book', @book, :method => :delete) %>
</p>
