<h1>All Books</h1>

<% @books.each do |book| %>

<div class="content">

<%= link_to(image_tag(book.image, :class => 'thumb'), book) %>

<h3><%= link_to(book.title, book) %></h3>
<ul>
  <li>Author: <%= book.writer %></li>
  <li>Genre: <%= book.genre %></li>
  <li>Year: <%= book.year %></li>
</ul>
</div>
<% end %>
