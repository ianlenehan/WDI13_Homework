<%= form_for @author do |f| %>

<fieldset><%= f.label :name %><%= f.text_field :name %></fieldset>
<fieldset> <%= f.label :image %> <%= f.url_field :image %> </fieldset>
<fieldset> <%= f.label :dob, 'Date of Birth' %> <%= f.text_field :dob, :placeholder => '1893/04/20' %> </fieldset>
<fieldset><%= f.label :genre %><%= f.text_field :genre %></fieldset>
<fieldset><%= f.label :awards %><%= f.text_field :awards %></fieldset>

<%= f.submit %>

<% end %>
