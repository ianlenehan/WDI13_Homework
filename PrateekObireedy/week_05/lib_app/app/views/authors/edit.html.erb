<h1>Edit Author</h1>

<%= form_for @author do |f| %>
<fieldset>
<%= f.label :name %>
<%= f.text_field :name %>
</fieldset>

<fieldset>
  <%= f.label :dob %>
  <%= f.text_field :dob, :placeholder => "dd/mm/yyyy" %>
</fieldset>

<fieldset>
  <%= f.label :image %>
  <%= f.url_field :image %>
</fieldset>

<fieldset>
  <%= f.submit %>
</fieldset>

<% end %>
